{
	"name": "transcendence",
	"version": "1.0.0",
	"description": "42 common core final project",
	"main": "build/server/main.js",
	"type": "module",
	"keywords": [],
	"author": "",
	"license": "ISC",
	"packageManager": "pnpm@10.11.0",
	"scripts": {
		"start": "node .",
		"build": "rm -rf build && run-s build:*",
		"build:server": "tsc -p tsconfig.server.json",
		"build:client": "tsc -p tsconfig.client.json",
		"build:style": "tailwindcss -i ./src/client/style.css -o ./build/public/style.css",
		"dev": "rm -rf build && run-p -l dev:*",
		"dev:run": "sleep 1.5 && export NODE_ENV=development && nodemon",
		"dev:server": "tsc -p tsconfig.server.json -w --preserveWatchOutput",
		"dev:client": "tsc -p tsconfig.client.json -w --preserveWatchOutput",
		"dev:style": "tailwindcss -i ./src/client/style.css -o ./build/public/style.css --watch",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"check": "biome check",
		"postinstall": "drizzle-kit push"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@tailwindcss/cli": "^4.1.10",
		"@types/node": "^24.0.1",
		"drizzle-kit": "^0.31.1",
		"nodemon": "^3.1.10",
		"npm-run-all": "^4.1.5",
		"tailwindcss": "^4.1.10",
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"@fastify/cookie": "^11.0.2",
		"@fastify/formbody": "^8.0.2",
		"@fastify/multipart": "^9.0.3",
		"@fastify/static": "^8.2.0",
		"@fastify/view": "^11.1.0",
		"@libsql/client": "^0.15.9",
		"argon2": "^0.43.0",
		"dotenv": "^16.5.0",
		"drizzle-orm": "^0.44.2",
		"fastify": "^5.4.0",
		"fastify-plugin": "^5.0.1",
		"fastify-type-provider-zod": "^5.0.1",
		"handlebars": "^4.7.8",
		"zod": "^3.25.64"
	}
}
